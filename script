local Input = PlayerTab:CreateInput({
   Name = "Teleport to player",
   CurrentValue = "",
   PlaceholderText = "Put the player name to teleport",
   RemoveTextAfterFocusLost = false,
   Flag = "Input1",
   Callback = function(Text)
       local TargetPlayer = game.Players:FindFirstChild(Text)

       if TargetPlayer and TargetPlayer.Character and TargetPlayer.Character:FindFirstChild("HumanoidRootPart") then
           if Player.Character and Player.Character:FindFirstChild("HumanoidRootPart") then
               Player.Character.HumanoidRootPart.CFrame = TargetPlayer.Character.HumanoidRootPart.CFrame
           end
       else
           warn("Target player or their character not found.")
       end
   end,
})

-- WalkSpeed Slider: Adjusts the player's walk speed
PlayerTab:CreateSlider({
    Name = "WalkSpeed",
    Range = {16, 200},
    Increment = 1,
    Suffix = "Speed",
    CurrentValue = 16,
    Callback = function(Value)
        local character = game.Player.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid.WalkSpeed = Value
            end
        end
    end,
})

-- JumpPower Slider: Adjusts the player's jump power
PlayerTab:CreateSlider({
    Name = "JumpPower",
    Range = {50, 200},
    Increment = 1,
    CurrentValue = 50,
    Callback = function(Value)
        local character = game.Player.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid.JumpPower = Value
            end
        end
    end,
})

-- Infinite Jump Toggle: Lets you jump even while in mid-air
local infiniteJumpEnabled = false
PlayerTab:CreateToggle({
    Name = "Infinite Jump",
    CurrentValue = false,
    Callback = function(Value)
        infiniteJumpEnabled = Value
    end,
})
-- Connect Infinite Jump to the jump event
game:GetService("UserInputService").JumpRequest:Connect(function()
    if infiniteJumpEnabled then
        local character = game.Player.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            end
        end
    end
end)

-- Noclip Toggle: Disables collisions for the player's character
local noclipEnabled = false
PlayerTab:CreateToggle({
    Name = "Noclip",
    CurrentValue = false,
    Callback = function(Value)
        noclipEnabled = Value
        if noclipEnabled then
            spawn(function()
                while noclipEnabled and wait() do
                    local character = game.Player.Character
                    if character then
                        for _, part in ipairs(character:GetDescendants()) do
                            if part:IsA("BasePart") then
                                part.CanCollide = false
                            end
                        end
                    end
                end
            end)
        end
    end,
})

-- ESP Feature
local espEnabled = false
local espFolder = Instance.new("Folder", game.CoreGui)
espFolder.Name = "ESP"

game.Players.PlayerRemoving:Connect(removeHighlight)
-- Function to create ESP highlight for a player
local function createHighlight(player)

    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        if not espFolder:FindFirstChild(player.Name) then
            local highlight = Instance.new("Highlight")
            highlight.Name = player.Name
            highlight.Adornee = player.Character
            highlight.FillColor = Color3.fromRGB(128, 0, 128) -- Purple color
            highlight.OutlineColor = Color3.fromRGB(255, 255, 255) -- Optional: white outline
            highlight.FillTransparency = 0.5
            highlight.Parent = espFolder
        end
    end
end

-- Function to remove ESP highlight when player leaves

local function removeHighlight(player)
    local highlight = espFolder:FindFirstChild(player.Name)
    if highlight then
        highlight:Destroy()
    end
end

-- Constantly update ESP highlights
task.spawn(function()
    while true do
        if espEnabled then
            for _, player in ipairs(game.Players:GetPlayers()) do
                if player ~= game.Players.LocalPlayer then
                    createHighlight(player)
                end
            end
        else
            -- If disabled, remove all highlights
            for _, v in ipairs(espFolder:GetChildren()) do
                v:Destroy()
            end
        end
        task.wait(1) -- Update every 1 second
    end
end)

-- Listen for new players joining
game.Players.PlayerAdded:Connect(function(player)
   

 player.CharacterAdded:Connect(function()
        if espEnabled then
            task.wait(1) -- wait a bit for character to load
            createHighlight(player)
        end
    end)
end)

-- ESP Toggle in PlayerTab
PlayerTab:CreateToggle({
    Name = "Player ESP (Purple)",
    CurrentValue = false,
    Callback = function(Value)
        espEnabled = Value
    end,
})
